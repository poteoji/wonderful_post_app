<p id="notice"><%= notice %></p>

<div class="card">
  <div class="card-header">
    <%= @article.title %>
  </div>
  <div class="card-body">
    <%= @article.content %>
  </div>
</div>



<%= link_to '一覧', articles_path, class: "btn btn-secondary" %>


<% if user_signed_in? && @article.user_id == current_user.id %>
  <%= link_to '編集', edit_article_path(@article), class: "btn btn-warning" %>
<% end %>
